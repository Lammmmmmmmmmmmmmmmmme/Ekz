            <Button Content="Вычислить массу" Click="CalculateMass_Click" Canvas.Left="103" Canvas.Top="161" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Height="41" Width="186"/>
            <TextBlock x:Name="lblResult" HorizontalAlignment="Left" VerticalAlignment="Center" Width="308" Canvas.Left="77" Canvas.Top="217" FontSize="25" Height="85"/>
